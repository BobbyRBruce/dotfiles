[push]
    autoSetupRemote = true
[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
[init]
    defaultBranch = main
    templateDir = ~/.git-template
[pull]
    ff = only
[advice]
    diverging = false
[color]
    us = auto
[apply]
    whitespace = fix
[core]
    excludesfiles = ~/.gitignore
    editor = "vim"
    hooksPath = ~/.git_template/hooks
